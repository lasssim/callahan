<div class="boxheader">New role</div>

<div class="boxcontent">

  <% form_for(@role) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>

  <%= link_to 'Back', roles_path %>

</div>
