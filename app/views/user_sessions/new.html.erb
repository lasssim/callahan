<div class="boxheader">Login</div>
<div class="boxcontent">
  <% semantic_form_for @user_session, :url => user_session_path do |form| %>
    <% form.inputs :name => "Login" do %>
      <%= form.input :login %>
      <%= form.input :password %>
      <%= form.input :remember_me, :as => :boolean %>
      <%= form.commit_button "Login" %>
    <% end %>
  <% end %>
</div>
