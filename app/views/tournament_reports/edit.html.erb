<h1>Editing tournament_report</h1>

<% form_for(@tournament_report) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :team_id %><br />
    <%= f.text_field :team_id %>
  </p>
  <p>
    <%= f.label :creator %><br />
    <%= f.text_field :creator %>
  </p>
  <p>
    <%= f.label :updated %><br />
    <%= f.datetime_select :updated %>
  </p>
  <p>
    <%= f.label :created %><br />
    <%= f.datetime_select :created %>
  </p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'mceEditor' %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @tournament_report %> |
<%= link_to 'Back', tournament_reports_path %>

</body>
